<div class="login-layout">
  <div class="main-container">
    <div class="main-content">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <div class="login-container">
            <div class="center">
              <h1>
                <i class="icon-leaf green"></i>
                <span class="red">MOM-BOT</span>
                <span class="white">System</span>
              </h1>
              <h4 class="blue">&copy; SOSBeacon</h4>
            </div>

            <div class="space-6"></div>

            <div class="position-relative">
              <div id="signup-box" class="signup-box widget-box no-border visible">
                <div class="widget-body">
                  <div class="widget-main">
                    <h4 class="header green lighter bigger">
                      <i class="icon-group blue"></i>
                      New User Registration
                    </h4>

                    <div class="space-6"></div>
                    <p> Enter your details to begin: </p>

                    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                      <fieldset>
                        <%= devise_error_messages! %>
                        <% flash.each do |key, value| %>
                            <div class="message">
                              <div class="alert-message <%= key %> fade in">
                                <a class="close" href="#">&times</a>
                                <center><strong><%= value %></strong></center>
                              </div>
                            </div>
                        <% end %>

                        <label class="block clearfix">
                            <span class="block input-icon input-icon-right">
                              <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Email" %>
                              <i class="icon-envelope"></i>
                            </span>
                        </label>

                        <label class="block clearfix">
                            <span class="block input-icon input-icon-right">
                                <%= f.password_field :password, :autofocus => true, :class => "form-control", :placeholder => "Password" %>
                                <i class="icon-user"></i>
                            </span>
                        </label>

                        <label class="block clearfix">
                          <span class="block input-icon input-icon-right">
                            <%= f.password_field :password_confirmation, :autofocus => true, :class => "form-control", :placeholder => "Password Repeat" %>
                            <i class="icon-lock"></i>
                          </span>
                        </label>

                        <label class="block">
                          <input type="checkbox" class="ace">
														<span class="lbl">
															I accept the
															<a href="#">User Agreement</a>
														</span>
                        </label>

                        <div class="space-24"></div>

                        <div class="clearfix">
                          <button type="reset" class="width-30 pull-left btn btn-sm">
                            <i class="icon-refresh"></i>
                            Reset
                          </button>

                          <%= f.submit "Register", :class => "width-65 pull-right btn btn-sm btn-success" %>

                        </div>
                      </fieldset>
                    <% end %>

                  </div>

                  <div class="toolbar center">
                    <a href="/users/sign_in" class="back-to-login-link">
                      <i class="icon-arrow-left"></i>
                      Back to login
                    </a>
                  </div>
                </div><!-- /widget-body -->
              </div>

            </div>
            <!-- /position-relative -->
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
  </div>
  <!-- /.main-container -->
</div>

