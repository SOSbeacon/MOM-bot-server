<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">Ã—</button>
            <h4 class="blue bigger">Parent</h4>
        </div>

        <div class="modal-body overflow-visible">
            <div class="row">
                <div class="col-xs-12">
                    <div class="group-alert"></div>
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label for="name" class="col-sm-3 control-label no-padding-right">Name: </label>
                            <div class="col-sm-9">
                                <input type="name" id="name" placeholder="Name" class="col-sm-5 col-xs-10"
                                       value="<%= name %>" autofocus="true"/>

                            </div>
                        </div>

                        <div class="form-group">
                            <label for="select_parent" class="col-sm-3 control-label no-padding-right">Parent: </label>
                            <div class="col-sm-9">
                                <p type="text" id="select_parent" class="col-sm-5 col-xs-10" value="<%= user.email %>"
                                       data-id="<%= user.id %>"><%= user.email %></p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button class="btn btn-sm" data-dismiss="modal">
                <i class="icon-remove"></i>
                Cancel
            </button>

            <button class="btn btn-sm btn-primary" id="submit">
                <i class="icon-ok"></i>
                Save
            </button>
        </div>
    </div>
</div>
