<div class="col-sm-offset-1 col-sm-10">
    <div class="profile-alert"></div>
    <div class="form-horizontal">
        <div class="tabbable">
            <ul class="nav nav-tabs padding-16">
                <li class="active">
                    <a data-toggle="tab" href="#edit-basic">
                        <i class="green icon-edit bigger-125"></i>
                        Basic Info
                    </a>
                </li>
                <li class="">
                    <a data-toggle="tab" href="#edit-password">
                        <i class="blue icon-key bigger-125"></i>
                        Password
                    </a>
                </li>
            </ul>
            <div class="tab-content profile-edit-tab-content">
                <div id="edit-basic" class="tab-pane active">
                    <h4 class="header blue bolder smaller">Basic info</h4>
                    <div class="form-group">
                        <label for="email" class="col-sm-3 control-label no-padding-right">Email</label>
                        <div class="col-sm-9">
                            <span class="input-icon input-icon-right">
                                <input type="email" placeholder="Email" id="email" value="<%= email %>" disabled/>
                                <i class="icon-envelope"></i>
                            </span>
                        </div>
                    </div>
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label for="first-name" class="col-sm-3 control-label no-padding-right">First name</label>
                        <div class="col-sm-9">
                            <span class="input-icon input-icon-right">
                                <input type="text" placeholder="First name" id="first-name" value="<%= first_name %>"/>
                                <i class="icon-envelope"></i>
                            </span>
                        </div>
                    </div>
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label for="last-name" class="col-sm-3 control-label no-padding-right">Last name</label>
                        <div class="col-sm-9">
                            <span class="input-icon input-icon-right">
                                <input type="text" placeholder="Last name" id="last-name" value="<%= last_name %>"/>
                                <i class="icon-envelope"></i>
                            </span>
                        </div>
                    </div>
                </div>

                <div id="edit-password" class="tab-pane">
                    <h4 class="header blue bolder smaller">Change password</h4>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="new-pass">New Password</label>

                        <div class="col-sm-9">
                            <input type="password" id="new-pass">
                        </div>
                    </div>

                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="confirm-password">Confirm Password</label>

                        <div class="col-sm-9">
                            <input type="password" id="confirm-password">
                        </div>
                    </div>

                    <div class="space-4"></div>
                </div>
            </div>
        </div>
        <div class="clearfix form-actions">
            <div class="col-md-offset-3 col-md-9">
                <button class="btn btn-info" type="button" id="updateProfile">
                    <i class="icon-ok bigger-110"></i>
                    Save
                </button>
                <button class="btn" type="reset" id="cancelProfile">
                    <i class="icon-undo bigger-110"></i>
                    Reset
                </button>
            </div>
        </div>
    </div>
</div>